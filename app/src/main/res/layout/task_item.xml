<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_height="80dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/percent"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/task_pic"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/pic"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taskname"
            android:text="电影名称"
            app:layout_constraintLeft_toRightOf="@+id/pic"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.3"
            android:layout_marginBottom="4dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0B/1.8G    978kb/s"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/pic"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="14dp"
            android:id="@+id/size"
            />
        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/donut_progress"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:layout_width="60dp"
            app:donut_text_size="14sp"
            app:donut_show_text="false"
            app:donut_background_color="@color/editcolor"
            app:donut_text_color="@color/colorAccent"
            app:donut_finished_color="@color/colorAccent"
            app:donut_finished_stroke_width="2dp"
            app:donut_unfinished_stroke_width="2dp"
            app:donut_unfinished_color="#e7e7e7"
            android:layout_height="60dp"
            />
        <TextView
            android:id="@+id/showtext"
            android:layout_width="40dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="30dp"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>